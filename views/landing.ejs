<%- include("partials/header.ejs") %>

        <!-- Carousel -->
        <section>
            <div id="demo" class="carousel slide mt-4" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
                    <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
                    <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
                </div>
                
                <div class="carousel-inner" style="max-height: 275px;">
                    <div class="carousel-item active">
                        <img src="images/banner1.jpg" alt="Los Angeles" class="d-block" style="width: 100%;">
                    </div>
                    <div class="carousel-item">
                        <img src="images/banner2.jpg" alt="Chicago" class="d-block" style="width:100%">
                    </div>
                    <div class="carousel-item">
                        <img src="https://officiallykmusic.com/wp-content/uploads/2021/09/twice-the-feels-banner-1000x500.jpg" alt="New York" class="d-block" style="width:100%">
                    </div>
                    
                    <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </button>
                </div>
            </div>
        </section>

        <!-- New Album -->
        <section class="mt-5 container">
            <div class="d-flex justify-content-between mb-3">
                <h2>New Album</h2>
                <p class="mt-3 text-secondary">ดูทั้งหมด</p>
            </div>
            <div class="text-center flex-rw d-flex mb-5">

                <% album.forEach(function(album) { %>
    
                    <div class="card me-3 ms-3 mt-2">
                        <a href="/album/<%= album._id %>">
                            <img src="<%= album.image %> " alt="song-cover" width="80%" class="m-auto mt-4 mb-3">
                        </a>
                        <a href="/album/<%= album._id %>" class="text-center mb-0 h4 text-decoration-none text-dark"><%= album.albumTitle %></a>
                        <a href="/artist/<%= album.artist.id %> " class="text-secondary h5 text-decoration-none">
                            <p class="hover-underline mb-0"><%= album.artist.name %></p> 
                        </a>
                    </div>
    
                <% })  %>
            </div>

        </section>
        
        <!-- New Song -->
        <section class="mt-5 container">
            
            <div class="d-flex justify-content-between mb-3">
                <h2>New Song</h2>
                <p class="mt-3 text-secondary">ดูทั้งหมด</p>
            </div>
            
            <div class="text-center flex-rw d-flex mb-5">
                <% songs.forEach(function(songs) { %> 
                    <div class="card me-3 ms-3 mt-2">
                        <a href="song/<%= songs._id %>">
                            <img src="<%= songs.image %>" alt="song-cover" width="80%" class="m-auto mt-4 mb-3 rounded">
                        </a>
                        <a href="song/<%= songs._id %>" class="text-center mb-0 h4 text-decoration-none text-dark">
                            <%= songs.title %>
                        </a>
                        <a href="artist/<%= songs.artist.id %>" class="h5 text-decoration-none text-secondary">
                            <p class="hover-underline mb-0"><%= songs.artist.name %></p>
                        </a>
                    </div>
                <% }) %> 
            </div>
        </section>

        <section class="mt-5 container">
            <div class="d-flex justify-content-between mb-3">
                <h2>ศิลปิน</h2>
                <p class="mt-3 text-secondary">ดูทั้งหมด</p>
            </div>

        <div class="text-center d-flex flex-rw mb-5">

            <% artist.forEach(function(artist) { %>

                <div class="card me-3 ms-3 mt-2">
                    <a href="/artist/<%= artist._id %>">
                        <img src="<%= artist.profileImage %> " alt="song-cover" width="80%" class="m-auto mt-4 mb-3 rounded-circle">
                    </a>
                    <a href="/artist/<%= artist._id %>" class="text-center mb-0 h4 text-decoration-none text-dark"><%= artist.name %></a>
                    <h5 class="text-secondary">ศิลปิน</h5>
                </div>

            <% })  %>
        </div>
        </section>


<%- include("partials/footer.ejs") %>
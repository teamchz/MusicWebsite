<%- include("../partials/header.ejs") %>

<section>
    <div class="container-fluid profile-banner mb-5">
        <div class="d-flex align-items-end ms-5">
            <div class="col-2">
                <img src="./images/playlist.png" alt="fav" height="180px" class="m-4">
            </div>
            <div class="col-10 mb-5">
                <p class="mb-0 h5">เพลย์ลิสต์</p>
                <h1 class="fw-bold display-1">เพลย์ลิสต์ของคุณ</h1>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container">
        <div class="text-center d-flex flex-rw">
            <div class="playlist-add ms-5 mb-5">
                <img src="./images/add.png" alt="add" height="150px" class="mx-auto mt-4" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
            </div>
            
            <% playlist.forEach(function(playlist) { %> 
                <div class="text-center">
                    <a href="/playlist/ <%= playlist._id %> " class="text-decoration-none">
                        <img src=<%= playlist.image %>  alt="add" height="200px" width="200px" class="ms-5">
                        <p class="ms-5 mb-5 mt-1 text-secondary h4"><%= playlist.name %> </p>
                    </a>
                </div>
            <% }) %> 

        </div>
    </div>


    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                
                <div class="modal-header">
                    <h4 class="modal-title" id="staticBackdropLabel">เพลย์ลิสต์ใหม่</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <form action="/playlist" method="POST">

                        <div class="mt-1">
                            <input type="text" class="form-control form-control-lg" name="playlist[name]" placeholder="ชื่อเพลย์ลิสต์" required>
                           
                            <input type="text" class="display-none" name="playlist[author.id]" value=<%= user._id %> >
                            <input type="text" class="display-none" name="playlist[author.name]" value= "<%= user.displayName %>">
                         
                            
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-save rounded-pill">บันทึก</button>
                            <button type="button" class="btn btn-cancle rounded-pill" data-bs-dismiss="modal">ยกเลิก</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</section>



<%- include("../partials/footer.ejs") %>